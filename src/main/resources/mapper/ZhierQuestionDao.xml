    <!--<select id="queryAll" resultType="ZhierQuestion">-->
        <!--SELECT question_id,create_time,latest_update_time,create_user_id,create_user_name,question_tag,question_text-->
        <!--FROM questions-->
        <!--ORDER BY create_time DESC-->
