<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.lcz.zhier.dao.ZhierAnswerDao">
<insert id="addAnswer">
    insert into answers(question_id,user_id,answer_text)
    values (#{questionId},#{userId},#{answerText});
</insert>

    <delete id="deleteAnswer">
        DELETE
        FROM answers
        WHERE answer_id=#{answerId}
    </delete>

    <update id="updateAnswer">
        UPDATE
        answers
        SET answer_text=#{newAnswerText},
        latest_update_time=#{updateTime}
        WHERE answer_id=#{answerId}
    </update>

    <select id="queryAllByQuestion" resultType="ZhierAnswer" parameterType="long">
        SELECT answer_id,question_id,user_id,answer_text,create_time,latest_update_time
        FROM answers
        WHERE question_id=#{questionId}
    </select>

    <select id="queryAllByUser" resultType="ZhierAnswer" parameterType="long">
        SELECT answer_id,question_id,user_id,answer_text,create_time,latest_update_time
        FROM answers
        WHERE user_id=#{userId}
    </select>
    <select id="queryByAnswerId" resultType="ZhierAnswer" parameterType="long">
        SELECT answer_id,question_id,user_id,answer_text,create_time,latest_update_time
        FROM answers
        WHERE answer_id=#{answerId}
    </select>
</mapper>
